{
    "extends": ["react-app", "prettier"],
    "plugins": ["react", "prettier"],
    "rules": {
        "no-console": 1,
        "prettier/prettier": [
            "warn",
            {
                "arrowParens": "avoid",
                "semi": false,
                "trailingComma": "none",
                "endOfLine": "lf",
                "tabWidth": 2,
                "useTabs": false,
                "singleQuote": true,
                "printWidth": 120,
                "jsxSingleQuote": false
            }
        ]
    }
}